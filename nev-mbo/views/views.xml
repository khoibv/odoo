<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="mbo_view_mbo_list">
      <field name="name">NEV MBO list</field>
      <field name="model">nev.mbo.mbo</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="user_mbo"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="mbo_view_mbo_action_window">
      <field name="name">My MBO</field>
      <field name="res_model">nev.mbo.mbo</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- menu categories -->
    <menuitem name="List MBO" id="mbo_menu_1_list" parent="mbo_menu_root" action="mbo_view_mbo_action_window"/>
    <!--<menuitem name="List" id="my_module.menu_1_list" parent="my_module.menu_1"-->
    <!--action="my_module.action_window"/>-->
  </data>
</odoo>
